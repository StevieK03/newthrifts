{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer reset-password section-{{ section.id }}-padding">
  <div>
    <h1>{{ 'customer.reset_password.title' | t }}</h1>
    <p>{{ 'customer.reset_password.subtext' | t }}</p>

    {%- form 'reset_customer_password' -%}
      {%- if form.errors -%}
        <h2 class="form__message" tabindex="-1" autofocus>
          <span class="svg-wrapper">
            <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
              <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
              <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
            </svg>
          </span>
          {{ form.errors | default_errors }}
        </h2>
      {%- endif -%}

      <div class="field">
        <input
          type="password"
          name="customer[password]"
          id="ResetPassword"
          class="field__input"
          autocomplete="new-password"
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="ResetPassword-error"
          {% endif %}
          placeholder="{{ 'customer.reset_password.password' | t }}"
        >
        <label for="ResetPassword">
          {{ 'customer.reset_password.password' | t }}
        </label>
      </div>
      {%- if form.errors contains 'password' -%}
        <small id="ResetPassword-error" class="form__message">
          <span class="svg-wrapper">
            <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
              <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
              <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
            </svg>
          </span>
          {{ form.errors.messages.password }}
        </small>
      {%- endif -%}

      <div class="field">
        <input
          type="password"
          name="customer[password_confirmation]"
          id="ResetPasswordConfirmation"
          class="field__input"
          autocomplete="new-password"
          {% if form.errors contains 'password_confirmation' %}
            aria-invalid="true"
            aria-describedby="ResetPasswordConfirmation-error"
          {% endif %}
          placeholder="{{ 'customer.reset_password.password_confirmation' | t }}"
        >
        <label for="ResetPasswordConfirmation">
          {{ 'customer.reset_password.password_confirmation' | t }}
        </label>
      </div>
      {%- if form.errors contains 'password_confirmation' -%}
        <small id="ResetPasswordConfirmation-error" class="form__message">
          <span class="svg-wrapper">
            <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
              <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
              <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
            </svg>
          </span>
          {{ form.errors.messages.password_confirmation }}
        </small>
      {%- endif -%}

      <button class="button">
        {{ 'customer.reset_password.submit' | t }}
      </button>
    {%- endform -%}

    <a href="{{ routes.account_login_url }}">
      {{ 'customer.reset_password.cancel' | t }}
    </a>
  </div>
</div>

<style>
  .reset-password {
    max-width: 500px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  
  .reset-password h1 {
    font-size: 2rem;
    margin-bottom: 10px;
  }
  
  .reset-password p {
    margin-bottom: 30px;
    color: #666;
  }
  
  .field {
    margin-bottom: 20px;
  }
  
  .field__input {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    font-size: 1rem;
  }
  
  .field__input:focus {
    outline: none;
    border-color: #2563eb;
  }
  
  .button {
    width: 100%;
    padding: 14px 20px;
    border: none;
    border-radius: 8px;
    background: #2563eb;
    color: white;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    margin-bottom: 15px;
  }
  
  .button:hover {
    background: #1d4ed8;
  }
  
  .form__message {
    color: #dc2626;
    font-size: 0.875rem;
    display: block;
    margin-top: 5px;
  }
</style>

{% schema %}
{
  "name": "t:sections.main-reset-password.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

