    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    --glass-bg: rgba(255, 255, 255, 0.8);
    --glass-border: rgba(148, 163, 184, 0.2);
    --glass-backdrop: blur(16px);
  }
  
  /* Dark mode variables */
  :root[data-theme="dark"] {
    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --bg-tertiary: #334155;
    --bg-accent: #475569;
    --text-primary: #f8fafc;
    --text-secondary: #e2e8f0;
    --text-muted: #94a3b8;
    --text-accent: #60a5fa;
    --border-primary: #334155;
    --border-secondary: #475569;
    --button-primary: #3b82f6;
    --button-primary-hover: #2563eb;
    --button-secondary: #475569;
    --button-secondary-hover: #334155;
    --success: #10b981;
    --warning: #f59e0b;
    --error: #ef4444;
    --info: #3b82f6;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.6);
    --glass-bg: rgba(15, 23, 42, 0.8);
    --glass-border: rgba(148, 163, 184, 0.2);
    --glass-backdrop: blur(16px);
  }

  /* ===== Modern Glassmorphism Header ===== */
  #Header-{{ section.id }}{
    background: var(--glass-bg) !important;
    backdrop-filter: var(--glass-backdrop) saturate(180%);
    -webkit-backdrop-filter: var(--glass-backdrop) saturate(180%);
    position: relative;
    z-index: 50;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--glass-border);
    border-radius: 0 0 20px 20px;
  }
  
  /* Dark mode header styling */
  [data-theme="dark"] #Header-{{ section.id }} {
    background: var(--glass-bg) !important;
    backdrop-filter: var(--glass-backdrop);
    -webkit-backdrop-filter: var(--glass-backdrop);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-primary);
  }
  #Header-{{ section.id }} *{ box-sizing:border-box }
  #Header-{{ section.id }} .nt-header__wrap{
    display: flex; 
    align-items: center; 
    justify-content: space-between;
    padding: 20px 30px;
    backdrop-filter: none !important; 
    -webkit-backdrop-filter: none !important;
    gap: 20px;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    flex-wrap: nowrap;
  }
  
  /* Sign In Button Styling */
  #Header-{{ section.id }} .nt-header__signin {
    display: flex;
    align-items: center;
    margin-right: 12px;
  }
  
  #Header-{{ section.id }} .nt-header__signin-link {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 12px 20px;
    border-radius: 12px;
    text-decoration: none;
    color: white !important;
    font-weight: 500;
    background: rgba(0, 0, 0, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
    min-width: 120px;
    height: 48px;
    flex-shrink: 0;
    gap: 8px;
  }
  
  #Header-{{ section.id }} .nt-header__signin-link:hover {
    background: rgba(0, 0, 0, 0.9);
    color: white !important;
    border-color: rgba(255, 255, 255, 0.5);
  }
  
  #Header-{{ section.id }} .user-icon {
    color: white;
    transition: all 0.3s ease;
    flex-shrink: 0;
    width: 18px;
    height: 18px;
  }
  
  #Header-{{ section.id }} .nt-header__signin-link:hover .user-icon {
    transform: scale(1.05);
    color: white;
  }
  
  #Header-{{ section.id }} .signin-text {
    font-size: 0.9rem;
    white-space: nowrap;
    color: white;
    font-weight: 500;
  }
  
  /* Dark mode sign in button styling */
  [data-theme="dark"] #Header-{{ section.id }} .nt-header__signin-link {
    background: rgba(71, 85, 105, 0.2);
    border: 1px solid var(--border-primary);
    color: var(--text-primary) !important;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }
  
  [data-theme="dark"] #Header-{{ section.id }} .nt-header__signin-link:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: var(--button-primary);
    color: var(--text-accent) !important;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  }
  
  [data-theme="dark"] #Header-{{ section.id }} .user-icon {
    color: var(--text-primary);
  }
  
  [data-theme="dark"] #Header-{{ section.id }} .signin-text {
    color: var(--text-primary);
  }

  /* Dark Mode Toggle Styling */
  #Header-{{ section.id }} .nt-header__dark-mode {
    display: flex;
    align-items: center;
    margin-right: 12px;
  }
  
  #Header-{{ section.id }} .dark-mode-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 0;
    border-radius: 12px;
    text-decoration: none;
    color: white !important;
    font-weight: 600;
    background: rgba(0, 0, 0, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    cursor: pointer;
    overflow: hidden;
  }
  
  /* Dark mode toggle styling when in dark theme */
  [data-theme="dark"] #Header-{{ section.id }} .dark-mode-toggle {
    background: rgba(71, 85, 105, 0.2);
    border: 1px solid var(--border-primary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }
  
  [data-theme="dark"] #Header-{{ section.id }} .dark-mode-toggle:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: var(--button-primary);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  }
  
  #Header-{{ section.id }} .dark-mode-toggle::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 165, 0, 0.1) 0%, rgba(255, 140, 0, 0.05) 100%);
    border-radius: 50%;
    opacity: 0;
    transition: all 0.3s ease;
    pointer-events: none;
  }
  
  #Header-{{ section.id }} .dark-mode-toggle:hover {
    background: rgba(0, 0, 0, 0.9);
    border-color: rgba(255, 255, 255, 0.5);
  }
  
  #Header-{{ section.id }} .dark-mode-toggle:hover::before {
    opacity: 1;
  }
  
  #Header-{{ section.id }} .dark-mode-toggle:active {
    transform: translateY(-1px) scale(0.98);
    transition: all 0.1s ease;
  }
  
  #Header-{{ section.id }} .dark-mode-toggle svg {
    position: relative;
    z-index: 2;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
  }
  
  #Header-{{ section.id }} .dark-mode-toggle .sun-icon {
    opacity: 0;
    transform: rotate(180deg) scale(0.5);
  }
  
  #Header-{{ section.id }} .dark-mode-toggle .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
    color: #ffa500;
    filter: 
      drop-shadow(0 0 8px rgba(255, 165, 0, 0.6))
      drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    width: 20px;
    height: 20px;
  }
  
  /* Light mode state */
  [data-theme="light"] #Header-{{ section.id }} .dark-mode-toggle .sun-icon {
    opacity: 0;
    transform: rotate(180deg) scale(0.5);
  }
  
  [data-theme="light"] #Header-{{ section.id }} .dark-mode-toggle .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
    color: #ffa500;
    filter: 
      drop-shadow(0 0 8px rgba(255, 165, 0, 0.6))
      drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    width: 20px;
    height: 20px;
  }
  
  /* Dark mode state */
  [data-theme="dark"] #Header-{{ section.id }} .dark-mode-toggle .sun-icon {
    opacity: 0;
    transform: rotate(180deg) scale(0.5);
  }
  
  [data-theme="dark"] #Header-{{ section.id }} .dark-mode-toggle .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
    color: #ffa500;
    filter: 
      drop-shadow(0 0 8px rgba(255, 165, 0, 0.6))
      drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    width: 20px;
    height: 20px;
  }
  
  /* Beautiful click animations */
  @keyframes moon-glow {
    0% { 
      filter: 
        drop-shadow(0 0 12px rgba(255, 165, 0, 0.8))
        drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
    }
    50% { 
      filter: 
        drop-shadow(0 0 20px rgba(255, 165, 0, 1))
        drop-shadow(0 0 30px rgba(255, 165, 0, 0.6))
        drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
    }
    100% { 
      filter: 
        drop-shadow(0 0 12px rgba(255, 165, 0, 0.8))
        drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
    }
  }
  
  @keyframes button-bounce {
    0% { transform: translateY(-2px) scale(1); }
    25% { transform: translateY(-4px) scale(1.05); }
    50% { transform: translateY(-1px) scale(0.98); }
    75% { transform: translateY(-3px) scale(1.02); }
    100% { transform: translateY(-2px) scale(1); }
  }
  
  @keyframes ripple-effect {
    0% {
      transform: scale(0);
      opacity: 0.6;
    }
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }
  
  #Header-{{ section.id }} .dark-mode-toggle.clicked {
    animation: button-bounce 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
  
  #Header-{{ section.id }} .dark-mode-toggle.clicked .moon-icon {
    animation: moon-glow 0.8s ease-out;
  }
  
  #Header-{{ section.id }} .dark-mode-toggle::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 165, 0, 0.3);
    transform: translate(-50%, -50%);
    transition: all 0.3s ease;
    pointer-events: none;
  }
  
  #Header-{{ section.id }} .dark-mode-toggle.clicked::after {
    animation: ripple-effect 0.6s ease-out;
  }

  /* Cart Button Styling - Matches navigation buttons */
  #Header-{{ section.id }} .nt-header__cart {
    display: flex;
    align-items: center;
  }
  
  #Header-{{ section.id }} .nt-header__cart-link {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 12px 20px;
    border-radius: 12px;
    text-decoration: none;
    color: white !important;
    font-weight: 500;
    background: rgba(0, 0, 0, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
    min-width: 48px;
    height: 48px;
    flex-shrink: 0;
  }
  
  #Header-{{ section.id }} .nt-header__cart-link:hover {
    background: rgba(0, 0, 0, 0.9);
    color: white !important;
    border-color: rgba(255, 255, 255, 0.5);
  }
  
  #Header-{{ section.id }} .nt-header__cart-icon {
    color: white;
    transition: all 0.3s ease;
    width: 20px;
    height: 20px;
  }
  
  #Header-{{ section.id }} .nt-header__cart-link:hover .nt-header__cart-icon {
    transform: scale(1.05);
    color: white;
  }
  
  /* Dark mode cart button styling */
  [data-theme="dark"] #Header-{{ section.id }} .nt-header__cart-link {
    background: rgba(71, 85, 105, 0.2);
    border: 1px solid var(--border-primary);
    color: var(--text-primary) !important;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }
  
  [data-theme="dark"] #Header-{{ section.id }} .nt-header__cart-link:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: var(--button-primary);
    color: var(--text-accent) !important;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  }
  
  [data-theme="dark"] #Header-{{ section.id }} .nt-header__cart-icon {
    color: var(--text-primary);
  }
  
  #Header-{{ section.id }} .nt-header__cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    background: #dc2626;
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    font-weight: 700;
    border: 2px solid rgba(255, 255, 255, 0.9);
    min-width: 20px;
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  /* Mobile touch improvements */
  @media (max-width: 768px) {
    #Header-{{ section.id }} .nt-header__link:active {
      transform: scale(0.95);
      transition: transform 0.1s ease;
    }
    
    #Header-{{ section.id }} .nt-header__cart-link:active {
      transform: scale(0.95);
      transition: transform 0.1s ease;
    }
    
    #Header-{{ section.id }} .wishlist-toggle:active {
      transform: scale(0.95);
      transition: transform 0.1s ease;
    }
    
    /* Improved scrollbar for navigation */
    #Header-{{ section.id }} .nt-header__nav::-webkit-scrollbar {
