    }
    
    #Header-{{ section.id }} .nt-header__nav::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.3);
      border-radius: 1px;
    }
  }
  
  #Header-{{ section.id }} .nt-header__cart-count:empty {
    display: none;
  }

  /* Mobile header adjustments */
  @media (max-width: 768px) {
    #Header-{{ section.id }} {
      border-radius: 0 0 15px 15px;
      backdrop-filter: blur(15px) saturate(150%);
      -webkit-backdrop-filter: blur(15px) saturate(150%);
    }
    
    #Header-{{ section.id }} .nt-header__wrap {
      justify-content: space-between;
      gap: 8px;
      padding: 12px 16px;
      flex-wrap: nowrap;
      min-height: 60px;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
    
    #Header-{{ section.id }} .nt-header__logo {
      margin-left: 0;
      flex-shrink: 0;
    }
    
    #Header-{{ section.id }} .nt-header__logo-img { 
      max-height: 50px; 
      width: auto;
    }
    
    #Header-{{ section.id }} .nt-header__logo-text {
      font-size: 1.4rem;
      line-height: 1.2;
    }
    
    #Header-{{ section.id }} .nt-header__nav {
      flex-shrink: 1;
      min-width: 0;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      flex: 1;
    }
    
    #Header-{{ section.id }} .nt-header__list {
      gap: 6px;
      flex-wrap: nowrap;
      padding: 0 4px;
      display: flex;
      align-items: center;
    }
    
    #Header-{{ section.id }} .nt-header__link {
      padding: 8px 14px;
      font-size: 0.85rem;
      white-space: nowrap;
      border-radius: 25px;
      min-height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      touch-action: manipulation;
      -webkit-tap-highlight-color: transparent;
      flex-shrink: 0;
    }
    
    /* Mobile sign in button adjustments */
    #Header-{{ section.id }} .nt-header__signin {
      flex-shrink: 0;
      margin-right: 8px;
    }
    
    #Header-{{ section.id }} .nt-header__signin-link {
      padding: 10px 16px;
      min-width: 100px;
      height: 40px;
      border-radius: 25px;
      gap: 6px;
      touch-action: manipulation;
      -webkit-tap-highlight-color: transparent;
    }
    
    #Header-{{ section.id }} .user-icon {
      width: 16px;
      height: 16px;
    }
    
    #Header-{{ section.id }} .signin-text {
      font-size: 0.8rem;
    }

    /* Mobile dark mode toggle adjustments */
    #Header-{{ section.id }} .nt-header__dark-mode {
      flex-shrink: 0;
      margin-right: 8px;
