<section id="welcome-{{ section.id }}" class="welcome-wrap" role="region" aria-label="Welcome to New Thrifts">
  <div class="welcome-container">
    <div class="welcome-content">
      <div class="welcome-text">
        <h1 class="welcome-headline">
          {{ section.settings.heading | default: "WELCOME TO NEW THRIFTS ‚Äî FRESH DROPS, GREAT PRICES." }}
        </h1>

        <div class="welcome-copy">
          {{ section.settings.body | default: "We keep your wardrobe fresh with <strong>new products weekly</strong>. From classic tees &amp; hoodies to <strong>must-have hats, shorts, and gadgets</strong>‚Äîplus fun seasonal collections for everyone. Dive into the full catalog and find your next favorite fit today!" }}
        </div>

        <div class="welcome-buttons">
          {% if section.settings.facebook_url != blank %}
            <a class="pill-btn" href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer">
              <!-- Facebook icon -->
              <svg aria-hidden="true" viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M13.5 9H15V6h-1.5C11.57 6 10 7.57 10 9.5V11H8v3h2v7h3v-7h2.1l.4-3H13v-1.3c0-.45.36-.7.8-.7Z"/></svg>
              <span>Follow us on <strong>Facebook</strong></span>
            </a>
          {% endif %}

          {% if section.settings.instagram_url != blank %}
            <a class="pill-btn" href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer">
              <!-- Instagram icon -->
              <svg aria-hidden="true" viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5Zm10 2H7a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3Zm-5 4.5A5.5 5.5 0 1 1 6.5 14 5.5 5.5 0 0 1 12 8.5Zm0 2A3.5 3.5 0 1 0 15.5 14 3.5 3.5 0 0 0 12 10.5Zm5.75-3.25a1.25 1.25 0 1 1-1.25 1.25 1.25 1.25 0 0 1 1.25-1.25Z"/></svg>
              <span>Follow us on <strong>Instagram</strong></span>
            </a>
          {% endif %}
        </div>
      </div>
      
      <div class="welcome-visual">
        <div class="visual-elements">
          <div class="floating-shape shape-1"></div>
          <div class="floating-shape shape-2"></div>
          <div class="floating-shape shape-3"></div>
          <div class="floating-dot dot-1"></div>
          <div class="floating-dot dot-2"></div>
          <div class="floating-dot dot-3"></div>
        </div>
        <div class="feature-highlights">
          <div class="highlight-item">
            <div class="highlight-icon">üõçÔ∏è</div>
            <span>New Products Weekly</span>
          </div>
          <div class="highlight-item">
            <div class="highlight-icon">üëï</div>
            <span>Classic Tees & Hoodies</span>
          </div>
          <div class="highlight-item">
            <div class="highlight-icon">üéÉ</div>
            <span>Seasonal Collections</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* ---- Modern Welcome Section Redesign ---- */
    #welcome-{{ section.id }} {
      padding: {{ section.settings.pad_y | default: 24 }}px 16px;
      background: {{ section.settings.section_bg | default: 'linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%)' }};
      position: relative;
      overflow: hidden;
    }

    #welcome-{{ section.id }} .welcome-container {
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
    }

    #welcome-{{ section.id }} .welcome-content {
      display: flex;
      flex-direction: column;
      gap: 32px;
      align-items: center;
      justify-content: center;
      min-height: 400px;
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .welcome-content {
        flex-direction: row;
        gap: 48px;
        align-items: center;
        justify-content: center;
        min-height: 500px;
      }
    }

    #welcome-{{ section.id }} .welcome-text {
      background: #ffffff;
      padding: 32px 24px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0,0,0,.08);
      border: 1px solid rgba(0,0,0,.06);
      position: relative;
      z-index: 2;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      width: 100%;
      max-width: 500px;
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .welcome-text {
        padding: 40px 32px;
        max-width: 600px;
        flex: 1;
      }
    }

    #welcome-{{ section.id }} .welcome-headline {
      font-family: 'Bebas Neue','Anton',system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
      font-size: clamp(24px,4vw,36px);
      line-height: 1.1;
      margin: 0 0 16px 0;
      letter-spacing: .5px;
      color: #0f172a;
      text-wrap: balance;
    }

    #welcome-{{ section.id }} .welcome-copy {
      font-family: Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
      font-size: 16px;
      line-height: 1.6;
      color: #475569;
      margin-bottom: 24px;
    }

    #welcome-{{ section.id }} .welcome-copy strong {
      color: #0f172a;
      font-weight: 700;
    }

    #welcome-{{ section.id }} .welcome-buttons {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    #welcome-{{ section.id }} .pill-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      border-radius: 9999px;
      background: #0f172a;
      color: #ffffff;
      border: 1px solid #0f172a;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      box-shadow: 0 4px 12px rgba(15,23,42,.2);
      transition: all .2s ease;
    }

    #welcome-{{ section.id }} .pill-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(15,23,42,.3);
      background: #1e293b;
    }

    #welcome-{{ section.id }} .welcome-visual {
      position: relative;
      min-height: 200px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .welcome-visual {
        min-height: 300px;
        justify-content: center;
        align-items: center;
      }
    }

    #welcome-{{ section.id }} .visual-elements {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
    }

    #welcome-{{ section.id }} .floating-shape {
      position: absolute;
      border-radius: 50%;
      background: linear-gradient(135deg, rgba(15,23,42,.1), rgba(15,23,42,.05));
      animation: float-shape 8s ease-in-out infinite;
    }

    #welcome-{{ section.id }} .shape-1 {
      width: 60px;
      height: 60px;
      top: 20%;
      left: 10%;
      animation-delay: 0s;
    }

    #welcome-{{ section.id }} .shape-2 {
      width: 40px;
      height: 40px;
      top: 60%;
      right: 20%;
      animation-delay: 2s;
    }

    #welcome-{{ section.id }} .shape-3 {
      width: 80px;
      height: 80px;
      bottom: 20%;
      left: 20%;
      animation-delay: 4s;
    }

    #welcome-{{ section.id }} .floating-dot {
      position: absolute;
      width: 8px;
      height: 8px;
      background: rgba(15,23,42,.3);
      border-radius: 50%;
      animation: float-dot 6s ease-in-out infinite;
    }

    #welcome-{{ section.id }} .dot-1 {
      top: 30%;
      right: 30%;
      animation-delay: 1s;
    }

    #welcome-{{ section.id }} .dot-2 {
      top: 70%;
      left: 30%;
      animation-delay: 3s;
    }

    #welcome-{{ section.id }} .dot-3 {
      top: 50%;
      right: 10%;
      animation-delay: 5s;
    }

    #welcome-{{ section.id }} .feature-highlights {
      background: #ffffff;
      padding: 24px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0,0,0,.08);
      border: 1px solid rgba(0,0,0,.06);
      position: relative;
      z-index: 2;
      width: 100%;
      max-width: 500px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .feature-highlights {
        max-width: 600px;
        flex: 1;
      }
    }

    #welcome-{{ section.id }} .highlight-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 0;
      border-bottom: 1px solid rgba(0,0,0,.06);
    }

    #welcome-{{ section.id }} .highlight-item:last-child {
      border-bottom: none;
    }

    #welcome-{{ section.id }} .highlight-icon {
      font-size: 20px;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(15,23,42,.05);
      border-radius: 8px;
    }

    #welcome-{{ section.id }} .highlight-item span {
      font-weight: 600;
      color: #0f172a;
      font-size: 14px;
    }

    @keyframes float-shape {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-20px) rotate(180deg); }
    }

    @keyframes float-dot {
      0%, 100% { transform: translateY(0px); opacity: 0.3; }
      50% { transform: translateY(-15px); opacity: 0.8; }
    }

    @media (prefers-reduced-motion: reduce) {
      #welcome-{{ section.id }} .floating-shape,
      #welcome-{{ section.id }} .floating-dot {
        animation: none;
      }
    }

    @media (max-width: 767px) {
      #welcome-{{ section.id }} .welcome-visual {
        min-height: 150px;
        margin-top: 24px;
      }
      
      #welcome-{{ section.id }} .feature-highlights {
        padding: 20px;
      }
    }
  </style>

  {% schema %}
  {
    "name": "Welcome / Social Bar",
    "settings": [
      { "type": "text", "id": "heading", "label": "Headline" },
      { "type": "richtext", "id": "body", "label": "Body" },
      { "type": "url", "id": "facebook_url", "label": "Facebook URL" },
      { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
      { "type": "range", "id": "pad_y", "label": "Top/Bottom padding (px)", "min": 0, "max": 120, "step": 4, "default": 24 },
      { "type": "color", "id": "section_bg", "label": "Section background", "default": "#f8fafc" }
    ],
    "presets": [
      { "name": "Welcome / Social Bar" }
    ]
  }
  {% endschema %}
</section>
