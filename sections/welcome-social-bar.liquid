<section id="welcome-{{ section.id }}" class="welcome-wrap" role="region" aria-label="Welcome to New Thrifts">
  <div class="welcome-container">
    <div class="welcome-content">
      <div class="welcome-text">
        <h1 class="welcome-headline">
          {{ section.settings.heading | default: "EXCLUSIVE FASHION DROPS ‚Äî PREMIUM QUALITY, UNBEATABLE PRICES." }}
        </h1>

        <div class="welcome-copy">
          {{ section.settings.body | default: "Join thousands of fashion-forward customers who trust us for <strong>curated, limited-edition pieces</strong>. From exclusive collaborations to <strong>trending streetwear and seasonal collections</strong>‚Äîdiscover your next statement piece in our premium catalog." }}
        </div>
        
        <div class="welcome-stats">
          <div class="stat-item">
            <span class="stat-number">10K+</span>
            <span class="stat-label">Happy Customers</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">500+</span>
            <span class="stat-label">Premium Products</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">24/7</span>
            <span class="stat-label">VIP Support</span>
          </div>
        </div>

        <div class="welcome-buttons">
          {% if section.settings.facebook_url != blank %}
            <a class="pill-btn" href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer">
              <!-- Facebook icon -->
              <svg aria-hidden="true" viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M13.5 9H15V6h-1.5C11.57 6 10 7.57 10 9.5V11H8v3h2v7h3v-7h2.1l.4-3H13v-1.3c0-.45.36-.7.8-.7Z"/></svg>
              <span>Follow us on <strong>Facebook</strong></span>
            </a>
          {% endif %}

          {% if section.settings.instagram_url != blank %}
            <a class="pill-btn" href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer">
              <!-- Instagram icon -->
              <svg aria-hidden="true" viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5Zm10 2H7a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3Zm-5 4.5A5.5 5.5 0 1 1 6.5 14 5.5 5.5 0 0 1 12 8.5Zm0 2A3.5 3.5 0 1 0 15.5 14 3.5 3.5 0 0 0 12 10.5Zm5.75-3.25a1.25 1.25 0 1 1-1.25 1.25 1.25 1.25 0 0 1 1.25-1.25Z"/></svg>
              <span>Follow us on <strong>Instagram</strong></span>
            </a>
          {% endif %}
        </div>
      </div>
      
      <div class="welcome-visual">
        <div class="visual-elements">
          <div class="floating-shape shape-1"></div>
          <div class="floating-shape shape-2"></div>
          <div class="floating-shape shape-3"></div>
          <div class="floating-dot dot-1"></div>
          <div class="floating-dot dot-2"></div>
          <div class="floating-dot dot-3"></div>
        </div>
        <div class="feature-highlights">
          <div class="highlight-item">
            <div class="highlight-icon">üõçÔ∏è</div>
            <span>New Products Weekly</span>
          </div>
          <div class="highlight-item">
            <div class="highlight-icon">üëï</div>
            <span>Classic Tees & Hoodies</span>
          </div>
          <div class="highlight-item">
            <div class="highlight-icon">üéÉ</div>
            <span>Seasonal Collections</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* ---- Deep Sea Welcome Section with Neal.fun Style Effects ---- */
    #welcome-{{ section.id }} {
      padding: {{ section.settings.pad_y | default: 24 }}px 16px;
      background: linear-gradient(180deg, #001122 0%, #000a1a 25%, #000811 50%, #000408 75%, #000000 100%);
      position: relative;
      overflow: hidden;
      min-height: 100vh;
    }

    /* Deep sea overlay for depth effect */
    #welcome-{{ section.id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(ellipse at center, transparent 0%, rgba(0, 50, 100, 0.3) 50%, rgba(0, 0, 0, 0.8) 100%);
      pointer-events: none;
      z-index: 1;
    }

    /* Floating bubble particles */
    #welcome-{{ section.id }}::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(2px 2px at 20px 30px, rgba(255, 255, 255, 0.1), transparent),
        radial-gradient(2px 2px at 40px 70px, rgba(255, 255, 255, 0.08), transparent),
        radial-gradient(1px 1px at 90px 40px, rgba(255, 255, 255, 0.06), transparent),
        radial-gradient(1px 1px at 130px 80px, rgba(255, 255, 255, 0.04), transparent),
        radial-gradient(2px 2px at 160px 30px, rgba(255, 255, 255, 0.1), transparent);
      background-repeat: repeat;
      background-size: 200px 100px;
      animation: float-bubbles 20s linear infinite;
      pointer-events: none;
      z-index: 0;
    }

    @keyframes float-bubbles {
      0% { transform: translateY(0px) translateX(0px); }
      25% { transform: translateY(-50px) translateX(10px); }
      50% { transform: translateY(-100px) translateX(-5px); }
      75% { transform: translateY(-150px) translateX(15px); }
      100% { transform: translateY(-200px) translateX(0px); }
    }

    #welcome-{{ section.id }} .welcome-container {
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
      z-index: 2;
    }

    #welcome-{{ section.id }} .welcome-content {
      display: flex;
      flex-direction: column;
      gap: 32px;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .welcome-content {
        flex-direction: row;
        gap: 48px;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }
    }

    #welcome-{{ section.id }} .welcome-text {
      background: rgba(0, 20, 40, 0.9);
      padding: 32px 24px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 100, 200, 0.3), 0 0 50px rgba(0, 150, 255, 0.2);
      border: 1px solid rgba(0, 150, 255, 0.3);
      position: relative;
      z-index: 3;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      width: 100%;
      max-width: 500px;
      backdrop-filter: blur(10px);
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .welcome-text {
        padding: 40px 32px;
        max-width: 600px;
        flex: 1;
      }
    }

    #welcome-{{ section.id }} .welcome-headline {
      font-family: 'Bebas Neue','Anton',system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
      font-size: clamp(24px,4vw,36px);
      line-height: 1.1;
      margin: 0 0 16px 0;
      letter-spacing: .5px;
      color: #ffffff;
      text-wrap: balance;
      text-shadow: 0 0 20px rgba(0, 150, 255, 0.5), 0 0 40px rgba(0, 100, 200, 0.3);
    }

    #welcome-{{ section.id }} .welcome-copy {
      font-family: Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
      font-size: 16px;
      line-height: 1.6;
      color: #b3d9ff;
      margin-bottom: 24px;
    }

    #welcome-{{ section.id }} .welcome-copy strong {
      color: #ffffff;
      font-weight: 700;
      text-shadow: 0 0 10px rgba(0, 150, 255, 0.4);
    }
    
    /* Premium Stats Section */
    #welcome-{{ section.id }} .welcome-stats {
      display: flex;
      gap: 20px;
      margin: 24px 0;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    #welcome-{{ section.id }} .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 16px;
      background: linear-gradient(135deg, rgba(0, 150, 255, 0.3) 0%, rgba(0, 100, 200, 0.2) 100%);
      border-radius: 12px;
      color: white;
      min-width: 100px;
      box-shadow: 0 4px 15px rgba(0, 150, 255, 0.3), 0 0 30px rgba(0, 150, 255, 0.2);
      border: 1px solid rgba(0, 150, 255, 0.4);
      transition: all 0.3s ease;
      backdrop-filter: blur(5px);
    }
    
    #welcome-{{ section.id }} .stat-item:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 150, 255, 0.5), 0 0 50px rgba(0, 150, 255, 0.3);
      border-color: rgba(0, 200, 255, 0.6);
    }
    
    #welcome-{{ section.id }} .stat-number {
      font-size: 1.5rem;
      font-weight: 800;
      line-height: 1;
      margin-bottom: 4px;
    }
    
    #welcome-{{ section.id }} .stat-label {
      font-size: 0.8rem;
      opacity: 0.9;
      text-align: center;
      line-height: 1.2;
    }

    #welcome-{{ section.id }} .welcome-buttons {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    #welcome-{{ section.id }} .pill-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      border-radius: 9999px;
      background: rgba(0, 50, 100, 0.8);
      color: #ffffff;
      border: 1px solid rgba(0, 150, 255, 0.5);
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      box-shadow: 0 4px 12px rgba(0, 150, 255, 0.3), 0 0 30px rgba(0, 150, 255, 0.2);
      transition: all .3s ease;
      backdrop-filter: blur(5px);
      text-shadow: 0 0 10px rgba(0, 150, 255, 0.4);
    }

    #welcome-{{ section.id }} .pill-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 150, 255, 0.5), 0 0 50px rgba(0, 150, 255, 0.4);
      background: rgba(0, 100, 200, 0.9);
      border-color: rgba(0, 200, 255, 0.8);
      text-shadow: 0 0 20px rgba(0, 200, 255, 0.6);
    }

    #welcome-{{ section.id }} .pill-btn svg {
      filter: drop-shadow(0 0 5px rgba(0, 150, 255, 0.6));
    }

    #welcome-{{ section.id }} .welcome-visual {
      position: relative;
      min-height: 200px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .welcome-visual {
        min-height: 300px;
        justify-content: center;
        align-items: center;
      }
    }

    #welcome-{{ section.id }} .visual-elements {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
    }

    #welcome-{{ section.id }} .floating-shape {
      position: absolute;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(0, 150, 255, 0.3) 0%, rgba(0, 100, 200, 0.1) 50%, transparent 100%);
      box-shadow: 0 0 20px rgba(0, 150, 255, 0.2);
      animation: float-shape 8s ease-in-out infinite;
    }

    #welcome-{{ section.id }} .shape-1 {
      width: 60px;
      height: 60px;
      top: 20%;
      left: 10%;
      animation-delay: 0s;
    }

    #welcome-{{ section.id }} .shape-2 {
      width: 40px;
      height: 40px;
      top: 60%;
      right: 20%;
      animation-delay: 2s;
    }

    #welcome-{{ section.id }} .shape-3 {
      width: 80px;
      height: 80px;
      bottom: 20%;
      left: 20%;
      animation-delay: 4s;
    }

    #welcome-{{ section.id }} .floating-dot {
      position: absolute;
      width: 8px;
      height: 8px;
      background: radial-gradient(circle, rgba(0, 200, 255, 0.8) 0%, rgba(0, 150, 255, 0.4) 100%);
      border-radius: 50%;
      animation: float-dot 6s ease-in-out infinite;
      box-shadow: 0 0 10px rgba(0, 200, 255, 0.6);
    }

    #welcome-{{ section.id }} .dot-1 {
      top: 30%;
      right: 30%;
      animation-delay: 1s;
    }

    #welcome-{{ section.id }} .dot-2 {
      top: 70%;
      left: 30%;
      animation-delay: 3s;
    }

    #welcome-{{ section.id }} .dot-3 {
      top: 50%;
      right: 10%;
      animation-delay: 5s;
    }

    #welcome-{{ section.id }} .feature-highlights {
      background: rgba(0, 20, 40, 0.9);
      padding: 24px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 100, 200, 0.3), 0 0 50px rgba(0, 150, 255, 0.2);
      border: 1px solid rgba(0, 150, 255, 0.3);
      position: relative;
      z-index: 3;
      width: 100%;
      max-width: 500px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      backdrop-filter: blur(10px);
    }

    @media (min-width: 768px) {
      #welcome-{{ section.id }} .feature-highlights {
        max-width: 600px;
        flex: 1;
      }
    }

    #welcome-{{ section.id }} .highlight-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 0;
      border-bottom: 1px solid rgba(0, 150, 255, 0.2);
    }

    #welcome-{{ section.id }} .highlight-item:last-child {
      border-bottom: none;
    }

    #welcome-{{ section.id }} .highlight-icon {
      font-size: 20px;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 150, 255, 0.2);
      border-radius: 8px;
      border: 1px solid rgba(0, 150, 255, 0.3);
      box-shadow: 0 0 15px rgba(0, 150, 255, 0.3);
    }

    #welcome-{{ section.id }} .highlight-item span {
      font-weight: 600;
      color: #ffffff;
      font-size: 14px;
      text-shadow: 0 0 10px rgba(0, 150, 255, 0.4);
    }

    @keyframes float-shape {
      0%, 100% { 
        transform: translateY(0px) rotate(0deg) scale(1); 
        opacity: 0.6;
      }
      25% { 
        transform: translateY(-10px) rotate(90deg) scale(1.1); 
        opacity: 0.8;
      }
      50% { 
        transform: translateY(-20px) rotate(180deg) scale(0.9); 
        opacity: 1;
      }
      75% { 
        transform: translateY(-15px) rotate(270deg) scale(1.05); 
        opacity: 0.7;
      }
    }

    @keyframes float-dot {
      0%, 100% { 
        transform: translateY(0px) translateX(0px); 
        opacity: 0.4; 
        box-shadow: 0 0 5px rgba(0, 200, 255, 0.4);
      }
      25% { 
        transform: translateY(-8px) translateX(3px); 
        opacity: 0.7; 
        box-shadow: 0 0 15px rgba(0, 200, 255, 0.6);
      }
      50% { 
        transform: translateY(-15px) translateX(-2px); 
        opacity: 1; 
        box-shadow: 0 0 20px rgba(0, 200, 255, 0.8);
      }
      75% { 
        transform: translateY(-10px) translateX(5px); 
        opacity: 0.6; 
        box-shadow: 0 0 10px rgba(0, 200, 255, 0.5);
      }
    }

    @media (prefers-reduced-motion: reduce) {
      #welcome-{{ section.id }} .floating-shape,
      #welcome-{{ section.id }} .floating-dot {
        animation: none;
      }
    }

    @media (max-width: 767px) {
      #welcome-{{ section.id }} .welcome-visual {
        min-height: 150px;
        margin-top: 24px;
      }
      
      #welcome-{{ section.id }} .feature-highlights {
        padding: 20px;
      }
    }
  </style>

  {% schema %}
  {
    "name": "Welcome / Social Bar",
    "settings": [
      { "type": "text", "id": "heading", "label": "Headline" },
      { "type": "richtext", "id": "body", "label": "Body" },
      { "type": "url", "id": "facebook_url", "label": "Facebook URL" },
      { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
      { "type": "range", "id": "pad_y", "label": "Top/Bottom padding (px)", "min": 0, "max": 120, "step": 4, "default": 24 },
      { "type": "color", "id": "section_bg", "label": "Section background", "default": "#f8fafc" }
    ],
    "presets": [
      { "name": "Welcome / Social Bar" }
    ]
  }
  {% endschema %}
</section>
