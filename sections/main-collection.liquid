    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border: 1px solid rgba(15,23,42,.15);
    display: inline-block;
  }
  
  #collection-{{ collection.id }} .swatch__label {
    font-size: 0.86rem;
    font-weight: 700;
  }
  
  /* Price Animation */
