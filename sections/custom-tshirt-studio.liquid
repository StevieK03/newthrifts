            this.updatePlacementDisplay();
            this.updateDesignPosition();
            this.showMessage(`‚¨ÖÔ∏è Design moved left ${step}px`, 'info');
            break;
          case 'ArrowRight':
            e.preventDefault();
            this.placementState.leftPct = Math.min(100, this.placementState.leftPct + step);
