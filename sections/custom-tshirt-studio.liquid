            ctx.save();
            ctx.translate(designX + designWidth / 2, designY + designHeight / 2);
            ctx.rotate(rotateDeg * Math.PI / 180);
            ctx.drawImage(designImg, -designWidth / 2, -designHeight / 2, designWidth, designHeight);
