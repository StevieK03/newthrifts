    // Build all hex cells in a disk of given radius
    function buildAxialHexDisk(radius) {
        const cells = [];
        for (let q = -radius; q <= radius; q++) {
            const r1 = Math.max(-radius, -q - radius);
            const r2 = Math.min(radius, -q + radius);
            for (let r = r1; r <= r2; r++) {
                cells.push({ q, r });
            }
        }
        return cells;
    }
    
