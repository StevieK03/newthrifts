  }

  .nt-placement-controls {
    margin: 10px 0 !important;
    padding: 16px !important;
  }

  .placement-slider {
    margin-bottom: 12px !important;
  }
}

/* Animation Classes */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
