<section id="nt-mockup-{{ section.id }}" class="nt-mockup nt-mockup-section" style="padding: 60px 0;">
  <div class="container">
    
    <!-- Section Header -->
    <div class="mockup-header" style="text-align: center; margin-bottom: 40px;">
