    flipDesign(direction) {
      this.placementState[`flip${direction.charAt(0).toUpperCase() + direction.slice(1)}`] = !this.placementState[`flip${direction.charAt(0).toUpperCase() + direction.slice(1)}`];
      this.updateDesignPosition();
