      overlay.addEventListener('mouseenter', () => {
        isOverOverlay = true;
        overlay.style.cursor = 'grab';
      });
      
      overlay.addEventListener('mouseleave', () => {
        isOverOverlay = false;
        if (!this.placementState.dragging) {
          overlay.style.cursor = 'grab';
        }
      });

      // Click to select design
      overlay.addEventListener('click', (e) => {
        e.stopPropagation();
        this.selectDesign();
      });

