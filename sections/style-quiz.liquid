    updateNavigation();
  }
  
  // Update progress ring
  function updateProgress() {
    const progress = (currentQuestion / totalQuestions) * 100;
    const circumference = 2 * Math.PI * 26;
    const offset = circumference - (progress / 100) * circumference;
    
    progressRing.style.strokeDashoffset = offset;
    progressText.textContent = `${currentQuestion}/${totalQuestions}`;
  }
  
  // Update navigation buttons
  function updateNavigation() {
    prevBtn.disabled = currentQuestion === 1;
    nextBtn.style.display = currentQuestion < totalQuestions ? 'flex' : 'none';
    finishBtn.style.display = currentQuestion === totalQuestions ? 'flex' : 'none';
  }
  
  // Show question
  function showQuestion(questionNum) {
    // Hide all questions
    document.querySelectorAll('.quiz-question').forEach(q => {
      q.classList.remove('active');
    });
    
    // Show current question
    const currentQ = document.querySelector(`[data-question="${questionNum}"]`);
    if (currentQ) {
      currentQ.classList.add('active');
    }
  }
  
  // Handle option selection
  function handleOptionSelection(questionNum, value) {
    answers[questionNum] = value;
    
    // Update visual selection
    const question = document.querySelector(`[data-question="${questionNum}"]`);
    question.querySelectorAll('.quiz-option').forEach(option => {
      option.classList.remove('selected');
    });
    
    const selectedOption = question.querySelector(`[data-value="${value}"]`);
    if (selectedOption) {
      selectedOption.classList.add('selected');
    }
    
    // Enable next button
    nextBtn.disabled = false;
  }
  
  // Next question
  function nextQuestion() {
    if (currentQuestion < totalQuestions) {
      currentQuestion++;
      showQuestion(currentQuestion);
      updateProgress();
      updateNavigation();
      
      // Disable next button until option is selected
      nextBtn.disabled = true;
    }
  }
  
  // Previous question
  function prevQuestion() {
    if (currentQuestion > 1) {
      currentQuestion--;
      showQuestion(currentQuestion);
      updateProgress();
      updateNavigation();
      
      // Re-enable next button if option was already selected
      const currentQ = document.querySelector(`[data-question="${currentQuestion}"]`);
      if (currentQ && currentQ.querySelector('.quiz-option.selected')) {
        nextBtn.disabled = false;
      } else {
        nextBtn.disabled = true;
      }
    }
  }
  
  // Finish quiz
  function finishQuiz() {
    const profileKey = Object.values(answers).join('-');
    const profile = styleProfiles[profileKey] || styleProfiles['vibrant-casual-spring-adventurous'];
    
    // Update results
    document.getElementById('style-name').textContent = profile.name;
    document.getElementById('style-description').textContent = profile.description;
    document.getElementById('profile-image').textContent = profile.image;
    
    // Update traits
    const traitsContainer = document.getElementById('style-traits');
    traitsContainer.innerHTML = profile.traits.map(trait => 
      `<span class="trait">${trait}</span>`
    ).join('');
    
    // Update recommended products
    const productsContainer = document.getElementById('recommended-products');
    productsContainer.innerHTML = profile.products.map(product => `
      <div class="recommended-product">
        <img src="${product.image}" alt="${product.title}">
        <div class="recommended-product-title">${product.title}</div>
        <div class="recommended-product-price">${product.price}</div>
      </div>
    `).join('');
    
    // Show results modal
    resultsModal.classList.add('active');
  }
  
  // Event listeners
  nextBtn.addEventListener('click', nextQuestion);
  prevBtn.addEventListener('click', prevQuestion);
  finishBtn.addEventListener('click', finishQuiz);
  
  // Option selection listeners
  document.querySelectorAll('.quiz-option').forEach(option => {
    option.addEventListener('click', function() {
      const questionNum = parseInt(this.closest('.quiz-question').dataset.question);
      const value = this.dataset.value;
      handleOptionSelection(questionNum, value);
    });
  });
  
  // Results modal actions
  document.getElementById('shop-recommendations').addEventListener('click', function() {
    // Navigate to shop with recommendations
    console.log('Navigate to shop with recommendations');
    resultsModal.classList.remove('active');
  });
  
  document.getElementById('retake-quiz').addEventListener('click', function() {
    // Reset quiz
    currentQuestion = 1;
    answers = {};
    resultsModal.classList.remove('active');
    initQuiz();
    showQuestion(1);
  });
  
  // Initialize
  initQuiz();
  showQuestion(1);
});
</script>

