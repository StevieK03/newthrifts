{{ 'section-password.css' | asset_url | stylesheet_tag }}

<div class="password-page">
  <header class="password-header section-{{ section.id }}-padding">
    {%- if section.settings.logo != blank -%}
      <h1 class="password-header__logo">
        <img
          src="{{ section.settings.logo | image_url: width: 200 }}"
          alt="{{ shop.name }}"
          width="{{ section.settings.logo.width }}"
          height="{{ section.settings.logo.height }}"
          loading="lazy"
        >
      </h1>
    {%- else -%}
      <h1 class="password-header__title">{{ shop.name }}</h1>
    {%- endif -%}
  </header>

  <main class="password-main">
    <div class="password-content">
      {%- if section.settings.heading != blank -%}
        <h2 class="password-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.subtext != blank -%}
        <div class="password-subtext rte">
          {{ section.settings.subtext }}
        </div>
      {%- endif -%}

      {%- if section.settings.show_password_form -%}
        {%- form 'storefront_password', class: 'password-form' -%}
          <div class="password-form__message">
            {%- if form.errors -%}
              <p class="form__message" tabindex="-1" autofocus>
                <span class="svg-wrapper">
                  <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                  </svg>
                </span>
                {{ 'general.password_page.login_form_error' | t }}
              </p>
            {%- endif -%}
          </div>

          <div class="password-field field">
            <input
              type="password"
              name="password"
              id="Password"
              class="field__input"
              autocomplete="current-password"
              placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
            >
            <label class="field__label" for="Password">
              {{ 'general.password_page.login_form_password_label' | t }}
            </label>
          </div>

          <button type="submit" name="commit" class="password-button button">
            {{ 'general.password_page.login_form_submit' | t }}
          </button>
        {%- endform -%}
      {%- endif -%}

      {%- if section.settings.newsletter_enable -%}
        <div class="password-newsletter">
          <h3 class="password-newsletter__heading">
            {{ section.settings.newsletter_heading | default: 'Be the first to know when we launch.' }}
          </h3>
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <label class="field__label" for="NewsletterForm--{{ section.id }}">
                  {{ 'newsletter.label' | t }}
                </label>
                <button
                  type="submit"
                  class="newsletter-form__button field__button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                >
                  {{ 'newsletter.button_label' | t }}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
                </small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                {% render 'icon-success' %}
                {{ 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
      {%- endif -%}

      {%- if shop.password_message != blank -%}
        <div class="password-message rte">
          {{ shop.password_message }}
        </div>
      {%- endif -%}

      {%- if section.settings.show_social -%}
        <ul class="password-social list-unstyled list-social" role="list">
          {%- render 'social-icons' -%}
        </ul>
      {%- endif -%}
    </div>
  </main>

  <footer class="password-footer">
    <div class="password-footer__content">
      <small class="password-powered">
        {{ powered_by_link }}
      </small>
      
      {%- if section.settings.show_login_link -%}
        <a href="#LoginModal" class="password-login-link">
          {{ 'general.password_page.admin_link_html' | t }}
        </a>
      {%- endif -%}
    </div>
  </footer>
</div>

<style>
  .password-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .password-header {
    text-align: center;
    padding: 40px 20px 20px;
  }
  
  .password-header__title {
    font-size: 2rem;
    margin: 0;
  }
  
  .password-header__logo img {
    max-width: 200px;
    height: auto;
  }
  
  .password-main {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
  }
  
  .password-content {
    max-width: 500px;
    width: 100%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }
  
  .password-heading {
    font-size: 1.75rem;
    margin-bottom: 15px;
    text-align: center;
  }
  
  .password-subtext {
    text-align: center;
    margin-bottom: 30px;
    opacity: 0.9;
  }
  
  .password-form {
    margin-bottom: 30px;
  }
  
  .password-field {
    margin-bottom: 20px;
  }
  
  .field__input {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-size: 1rem;
  }
  
  .field__input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }
  
  .field__label {
    display: none;
  }
  
  .password-button {
    width: 100%;
    padding: 14px 20px;
    border: none;
    border-radius: 10px;
    background: white;
    color: #667eea;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .password-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }
  
  .password-newsletter {
    margin-top: 30px;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .password-newsletter__heading {
    font-size: 1.25rem;
    margin-bottom: 15px;
    text-align: center;
  }
  
  .password-social {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 30px;
    padding: 0;
  }
  
  .password-footer {
    padding: 20px;
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .password-footer__content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .password-login-link {
    color: white;
    text-decoration: none;
    opacity: 0.8;
  }
  
  .password-login-link:hover {
    opacity: 1;
  }
  
  .form__message {
    color: #ff6b6b;
    background: rgba(255, 255, 255, 0.9);
    padding: 10px 15px;
    border-radius: 8px;
    margin-bottom: 15px;
  }
  
  @media screen and (max-width: 768px) {
    .password-content {
      padding: 30px 20px;
    }
    
    .password-footer__content {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.password.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Opening Soon"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Be the first to know when we launch.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_password_form",
      "label": "Show password form",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "Show email signup"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Be the first to know when we launch."
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_login_link",
      "label": "Show admin login link",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

