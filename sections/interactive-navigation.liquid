  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  border-color: #27e1c1;
}

.card-inner {
  position: relative;
  z-index: 2;
}

.card-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 20px;
  position: relative;
}

