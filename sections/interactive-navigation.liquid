  height: 8px;
  background: #e2e8f0;
  border-radius: 10px;
  margin: 0 auto 15px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(45deg, #27e1c1, #ff4fa3);
  border-radius: 10px;
  width: 0%;
  transition: width 0.5s ease;
  animation: progressGlow 2s ease-in-out infinite;
}

@keyframes progressGlow {
