  <div class="bats" id="bats-{{ section.id }}" aria-hidden="true"></div>

  <!-- Lightning overlay -->
  <div class="lightning" id="lt-{{ section.id }}" aria-hidden="true" style="--lt: {{ section.settings.lightning_color }}; --amp: {{ section.settings.lightning_intensity }};"></div>

