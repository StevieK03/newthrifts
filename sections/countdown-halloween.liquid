      if (!btn._step || btn._step===3) btn._step = 1; else btn._step++;
      if (btn._step===1) flashLightning();
      else if (btn._step===2) spawnMore(5,5);
      else { stopActors(); startActors(); }
    });
    host.appendChild(btn);
  })();

