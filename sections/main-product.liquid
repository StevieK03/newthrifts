<section class="container" style="padding: 28px 0;">
  <div class="product-layout" style="display: grid; grid-template-columns: 1fr 1fr; gap: 48px; max-width: 1400px; margin: 0 auto; align-items: start;">
    
    <!-- Product Image -->
    <div class="product-image-container">
      {% if product.featured_image %}
        <img
          id="MainProductImage"
          src="{{ product.featured_image | img_url: '800x' }}"
          alt="{{ product.title | escape }}"
          style="width:100%; max-width: 700px; border-radius: var(--radius-xl); border:1px solid rgba(0,0,0,.08);">
      {% endif %}
    </div>

    <!-- Product Details -->
    <div class="product-details-container">
      <div class="card" style="padding: 32px; height: fit-content; min-width: 400px;">
    <h1 class="product-title" style="margin-top:0; font-family:'Bebas Neue', sans-serif; font-size:28px; text-align:left; line-height: 1.2;">
      {% comment %} Create a shorter, more concise title {% endcomment %}
      {% assign short_title = product.title %}
      
           {% comment %} Handle specific long product names {% endcomment %}
           {% if product.title contains 'Boo-tiful Ghost Toddler Long Sleeve Tee' %}
             {% assign short_title = 'Boo-tiful Ghost Toddler Tee' %}
           {% elsif product.title contains 'Baby T-Shirt Cutest Pumpkin' %}
             {% assign short_title = 'Cutest Pumpkin Baby Tee' %}
           {% elsif product.title contains 'Butterfly Floral Boxy Tee' %}
             {% assign short_title = 'Butterfly Floral Boxy Tee' %}
           {% elsif product.title contains 'Miami Nights Boxy Tee for Women' %}
             {% assign short_title = 'Miami Nights Boxy Tee' %}
           {% elsif product.title contains 'BABY T-SHIRT' %}
             {% assign short_title = product.title | replace: 'BABY T-SHIRT', 'BABY TEE' %}
           {% elsif product.title contains 'TODDLER LONG SLEEVE TEE' %}
             {% assign short_title = product.title | replace: 'TODDLER LONG SLEEVE TEE, HALLOWEEN SHIRT, CUTE KIDS TEE, SPOOKY SEASON APPAREL, TODDLER HALLOWEEN CLOTHING', 'TODDLER TEE' %}
           {% elsif product.title contains 'HALLOWEEN' %}
             {% assign short_title = product.title | split: 'HALLOWEEN' | first | append: 'HALLOWEEN' %}
           {% endif %}
      
      <span class="full-title" style="display: none;">{{ product.title }}</span>
      <span class="short-title">{{ short_title }}</span>
    </h1>

    <div class="product__price" data-product-price style="font-size:1.1rem; margin:8px 0 16px 0; color: #dc2626; font-weight: 600;">
      {{ product.selected_or_first_available_variant.price | money }}
    </div>

    {% comment %} Create a vertical container with color swatches and size selector stacked {% endcomment %}
    <div class="product-options-container" style="display: flex; flex-direction: column; gap: 16px; margin: 16px 0;">
      {% comment %} Color swatches at the top {% endcomment %}
      <div class="swatches-container">
        {% render 'swatch', product: product, option_name: 'Color', section_id: section.id %}
      </div>
      
      {% comment %} Size selector and Add to Cart in inline container {% endcomment %}
      <div class="size-and-cart-container">
        <div class="size-container">
          {%- unless product.has_only_default_variant -%}
            {%- for option in product.options_with_values -%}
              {%- assign opt_lc = option.name | downcase -%}
              {%- unless opt_lc == 'color' -%}
                <label for="Option{{ forloop.index }}" class="vp-legend">
                  {{ option.name }}
                </label>
                <select
                  id="Option{{ forloop.index }}"
                  class="single-option-selector nice-select"
                  data-index="option{{ forloop.index }}">
                  {%- for value in option.values -%}
                    <option value="{{ value | escape }}" {% if option.selected_value == value %}selected{% endif %}>{{ value }}</option>
                  {%- endfor -%}
                </select>
              {%- endunless -%}
            {%- endfor -%}
          {%- endunless -%}
        </div>
        
        {% comment %} Add to Cart Button - moved next to size {% endcomment %}
        {% form 'product', product, id: product_form_id, class: 'product-form' %}
          <!-- Hidden variant id Shopify reads on submit -->
          <input type="hidden"
                 name="id"
                 id="VariantId-{{ section.id }}"
                 value="{{ product.selected_or_first_available_variant.id }}">

          <button class="button button--primary btn-glow" type="submit"
            {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
            {% if product.selected_or_first_available_variant.available %}Add to cart{% else %}Sold out{% endif %}
          </button>
        {% endform %}
      </div>
      </div>

    {% comment %} Extract main product description for collapsible section {% endcomment %}
    {% assign description_parts = product.description | split: 'Product features' %}
    {% assign clean_description = description_parts[0] | split: 'Care instructions' %}
    {% assign final_description = clean_description[0] | split: 'Size Chart' %}
    {% assign final_description2 = final_description[0] | split: 'Size chart' %}
    {% assign final_description3 = final_description2[0] | split: 'SIZE CHART' %}
    {% assign final_description4 = final_description3[0] | split: 'Sizing Chart' %}
    {% assign final_description5 = final_description4[0] | split: 'Sizing chart' %}
    {% assign main_description = final_description5[0] | strip %}

    {% if main_description != blank %}
      <div class="info-section">
        <button class="info-section-toggle" data-target="description-content">
          <span class="section-title">Product Description</span>
          <span class="toggle-icon">‚ñº</span>
        </button>
        <div class="info-section-content" id="description-content">
          <div class="description-content">
            {{ main_description }}
          </div>
        </div>
      </div>
    {% endif %}

    <!-- Collapsible Product Information Sections -->
    <div class="product-info-sections" style="margin: 24px 0;">
      
      {% comment %} Extract Product Features from description {% endcomment %}
      {% assign features_section = product.description | split: 'Product features' | last | split: 'Care instructions' | first %}
      {% if features_section != blank %}
        <div class="info-section">
          <button class="info-section-toggle" data-target="features-content">
            <span class="section-title">Product Features</span>
            <span class="toggle-icon">‚ñº</span>
          </button>
          <div class="info-section-content" id="features-content">
            <div class="features-list">
              {% comment %} Split by newlines first, then process each line {% endcomment %}
              {% assign features_lines = features_section | split: '
' %}
              {% for line in features_lines %}
                {% assign clean_line = line | strip %}
                {% comment %} Only process lines that start with dash and have content {% endcomment %}
                {% if clean_line != blank and clean_line contains '-' %}
                  {% assign feature_text = clean_line | remove_first: '-' | strip %}
                  {% if feature_text != blank %}
                    <div class="feature-item">
                      <span class="feature-icon">‚úì</span>
                      <span>{{ feature_text }}</span>
                    </div>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}

      {% comment %} Extract Care Instructions from description {% endcomment %}
      {% assign care_section = product.description | split: 'Care instructions' | last %}
      {% if care_section != blank %}
        <div class="info-section">
          <button class="info-section-toggle" data-target="care-content">
            <span class="section-title">Care Instructions</span>
            <span class="toggle-icon">‚ñº</span>
          </button>
          <div class="info-section-content" id="care-content">
            <div class="care-list">
              {% comment %} Split by newlines first, then process each line {% endcomment %}
              {% assign care_lines = care_section | split: '
' %}
              {% for line in care_lines %}
                {% assign clean_line = line | strip %}
                {% comment %} Only process lines that start with dash and have content {% endcomment %}
                {% if clean_line != blank and clean_line contains '-' %}
                  {% assign care_text = clean_line | remove_first: '-' | strip %}
                  {% if care_text != blank %}
                    <div class="care-item">
                      {% comment %} Assign appropriate icons based on content {% endcomment %}
                      {% if care_text contains 'wash' %}
                        <span class="care-icon">üå°Ô∏è</span>
                      {% elsif care_text contains 'bleach' %}
                        <span class="care-icon">üß¥</span>
                      {% elsif care_text contains 'tumble dry' %}
                        <span class="care-icon">‚ùå</span>
                      {% elsif care_text contains 'iron' %}
                        <span class="care-icon">üî•</span>
                      {% elsif care_text contains 'dry clean' %}
                        <span class="care-icon">‚ùå</span>
                      {% else %}
                        <span class="care-icon">üìã</span>
                      {% endif %}
                      <span>{{ care_text }}</span>
                    </div>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}

      {% comment %} Extract Size Chart from description - always show for testing {% endcomment %}
      {% assign size_chart_section = '' %}
      {% assign has_size_chart = true %}
      
      {% if product.description contains 'Size Chart' %}
        {% assign size_chart_section = product.description | split: 'Size Chart' | last | split: 'Product features' | first %}
      {% elsif product.description contains 'Size chart' %}
        {% assign size_chart_section = product.description | split: 'Size chart' | last | split: 'Product features' | first %}
      {% elsif product.description contains 'SIZE CHART' %}
        {% assign size_chart_section = product.description | split: 'SIZE CHART' | last | split: 'Product features' | first %}
      {% elsif product.description contains 'Sizing Chart' %}
        {% assign size_chart_section = product.description | split: 'Sizing Chart' | last | split: 'Product features' | first %}
      {% elsif product.description contains 'Sizing chart' %}
        {% assign size_chart_section = product.description | split: 'Sizing chart' | last | split: 'Product features' | first %}
      {% else %}
        {% assign size_chart_section = 'Size information available in product description. Please refer to the product description for sizing details.' %}
      {% endif %}
      
      {% comment %} Always show size chart section for now {% endcomment %}
      {% if true %}
        <div class="info-section">
          <button class="info-section-toggle" data-target="size-chart-content">
            <span class="section-title">Size Chart</span>
            <span class="toggle-icon">‚ñº</span>
          </button>
          <div class="info-section-content" id="size-chart-content">
            <div class="size-chart-content">
              <div class="size-chart-header">
                <h4 style="margin: 0 0 16px 0; color: #333; font-weight: 600;">Find Your Perfect Fit</h4>
                <p style="margin: 0 0 16px 0; color: #666; font-size: 14px;">Measure yourself and compare with our size chart below.</p>
              </div>
              <div class="size-chart-data">
                {{ size_chart_section | strip }}
              </div>
              <div class="size-chart-footer">
                <p style="margin: 16px 0 0 0; color: #888; font-size: 12px; font-style: italic;">
                  üí° <strong>Tip:</strong> If you're between sizes, we recommend sizing up for a more comfortable fit.
                </p>
              </div>
            </div>
          </div>
        </div>
      {% endif %}

    </div>


    <script>
    (function(){
      var form       = document.getElementById('{{ product_form_id }}');
      if(!form) return;

      var productData = {{ product | json }};
      var selectors   = form.querySelectorAll('.single-option-selector');
      var idInput     = document.getElementById('VariantId-{{ section.id }}');
      var priceEl     = form.closest('.card').querySelector('[data-product-price]');
      var submitBtn   = form.querySelector('button[type="submit"]');

      function syncVariant(){
        if(!selectors.length) return; // single-variant products
        var chosen  = Array.from(selectors).map(function(s){ return s.value; }).join(' / ');
        var variant = productData.variants.find(function(v){ return v.options.join(' / ') === chosen; });

        if(variant){
          idInput.value = String(variant.id);

          if(priceEl){
            try {
              priceEl.textContent = (variant.price/100).toLocaleString(undefined, {style:'currency',currency:'{{ shop.currency }}'});
            } catch(e) { priceEl.textContent = (variant.price/100).toFixed(2); }
          }
          if(submitBtn){
            submitBtn.disabled = !variant.available;
            submitBtn.textContent = variant.available ? 'Add to cart' : 'Sold out';
          }

          var url = new URL(window.location.href);
          url.searchParams.set('variant', variant.id);
          history.replaceState({}, '', url);
        }
      }

      selectors.forEach(function(s){ s.addEventListener('change', syncVariant); });
    })();

    // Collapsible sections functionality
    document.addEventListener('DOMContentLoaded', function() {
      const toggles = document.querySelectorAll('.info-section-toggle');
      
      toggles.forEach(function(toggle) {
        toggle.addEventListener('click', function() {
          const targetId = this.getAttribute('data-target');
          const content = document.getElementById(targetId);
          const isActive = this.classList.contains('active');
          
          // Close all other sections
          toggles.forEach(function(otherToggle) {
            if (otherToggle !== toggle) {
              otherToggle.classList.remove('active');
              const otherTargetId = otherToggle.getAttribute('data-target');
              const otherContent = document.getElementById(otherTargetId);
              if (otherContent) {
                otherContent.classList.remove('active');
              }
            }
          });
          
          // Toggle current section
          if (isActive) {
            this.classList.remove('active');
            content.classList.remove('active');
          } else {
            this.classList.add('active');
            content.classList.add('active');
          }
        });
      });
    });
    </script>
      </div>
    </div>
  </div>
</section>

