    cursor: pointer;
}

.cts-slider-{{ section.id }}::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 18px;
    height: 18px;
    background: #14b8a6;
    border-radius: 50%;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(20, 184, 166, 0.4);
}

.cts-slider-{{ section.id }}::-moz-range-thumb {
    width: 18px;
    height: 18px;
    background: #14b8a6;
    border-radius: 50%;
