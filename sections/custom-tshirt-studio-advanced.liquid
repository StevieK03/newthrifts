    left: 31.5%;
    top: 29%;
    width: 37%;
    height: 42%;
    pointer-events: none;
}

.cts-guides-{{ section.id }} {
    position: absolute;
    inset: 0;
    border: 2px dashed rgba(96, 165, 250, 0.6);
    background: rgba(96, 165, 250, 0.05);
    display: none;
}

.cts-guides-{{ section.id }}.active {
    display: block;
}

.cts-guides-{{ section.id }}::before {
    content: 'SAFE PRINT AREA';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
