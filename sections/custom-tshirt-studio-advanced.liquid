    font-weight: 700;
    color: rgba(96, 165, 250, 0.8);
    letter-spacing: 2px;
}

/* Text Layers */
.cts-text-layer-{{ section.id }} {
    position: absolute;
    cursor: move;
    user-select: none;
    white-space: nowrap;
    transform-origin: center center;
}

.cts-text-layer-{{ section.id }}.selected {
    outline: 2px dashed #60a5fa;
    outline-offset: 4px;
}

/* Text Tool Panel */
.cts-panel-{{ section.id }} {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.cts-panel-content-{{ section.id }} {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.cts-panel-content-{{ section.id }}::-webkit-scrollbar {
    width: 8px;
}

.cts-panel-content-{{ section.id }}::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
}

.cts-panel-content-{{ section.id }}::-webkit-scrollbar-thumb {
