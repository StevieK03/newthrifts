    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    color: white;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
}

.cts-btn-secondary-{{ section.id }}:hover {
    background: rgba(255, 255, 255, 0.12);
}

/* Layer Item */
.cts-layer-item-{{ section.id }} {
