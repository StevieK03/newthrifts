/* Responsive */
@media (max-width: 1024px) {
    .cts-container-{{ section.id }} {
        grid-template-columns: 1fr;
        height: auto;
    }
    
    .cts-panel-{{ section.id }} {
        max-height: 70vh;
    }
}
