{% comment %}
Amazon Affiliate Showcase Section
- Displays curated Amazon products with affiliate links
- Matches your site's design aesthetic
- Mobile-responsive
{% endcomment %}

<section id="affiliate-{{ section.id }}" class="affiliate-showcase" style="padding: 40px 0; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);">
  <div class="container">
    <div class="affiliate-header" style="text-align: center; margin-bottom: 40px;">
      <h2 style="font-family: 'Bebas Neue', sans-serif; font-size: 36px; margin: 0 0 10px 0; color: #0f172a;">
        {{ section.settings.heading | default: "Recommended Finds" }}
      </h2>
      <p style="opacity: 0.8; margin: 0; font-size: 16px;">
        {{ section.settings.subheading | default: "Discover these amazing products we love" }}
      </p>
    </div>

    <div class="affiliate-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; max-width: 1200px; margin: 0 auto;">
      
      <!-- Amazon Women's T-Shirts -->
      <div class="affiliate-card" style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); transition: all 0.3s ease; position: relative; overflow: hidden;">
        <div class="affiliate-badge" style="position: absolute; top: 12px; right: 12px; background: linear-gradient(135deg, #ff9500, #ff6b00); color: white; padding: 4px 8px; border-radius: 12px; font-size: 10px; font-weight: 700; text-transform: uppercase;">
          Amazon
        </div>
        
        <div class="affiliate-image" style="width: 100%; height: 200px; background: linear-gradient(135deg, #f1f5f9, #e2e8f0); border-radius: 12px; display: flex; align-items: center; justify-content: center; margin-bottom: 16px; position: relative;">
          <div style="font-size: 48px;">üëï</div>
          <div class="image-overlay" style="position: absolute; inset: 0; background: linear-gradient(135deg, rgba(255, 149, 0, 0.1), rgba(255, 107, 0, 0.1)); border-radius: 12px; opacity: 0; transition: opacity 0.3s ease;"></div>
        </div>
        
        <h3 style="margin: 0 0 8px 0; font-size: 18px; font-weight: 600; color: #0f172a;">
          Women's T-Shirts
        </h3>
        
        <p style="margin: 0 0 16px 0; color: #64748b; font-size: 14px; line-height: 1.5;">
          Discover trending women's t-shirts with great prices and fast shipping. Perfect for your wardrobe!
        </p>
        
        <div class="affiliate-price" style="margin-bottom: 16px;">
          <span style="font-size: 12px; color: #64748b;">Starting from</span>
          <span style="font-size: 20px; font-weight: 700; color: #ff9500; margin-left: 8px;">$9.99</span>
        </div>
        
        <a href="https://amzn.to/4gVeXQ7" target="_blank" rel="noopener noreferrer sponsored" 
           class="affiliate-button" 
           style="display: inline-flex; align-items: center; justify-content: center; gap: 8px; width: 100%; padding: 12px 16px; background: linear-gradient(135deg, #ff9500, #ff6b00); color: white; text-decoration: none; border-radius: 12px; font-weight: 600; transition: all 0.3s ease; position: relative; overflow: hidden;">
          <span>üõçÔ∏è</span>
          <span>Shop on Amazon</span>
          <div class="button-shine" style="position: absolute; top: 0; left: -100%; width: 100%; height: 100%; background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent); transition: left 0.5s ease;"></div>
        </a>
      </div>

      <!-- Add more affiliate products here as needed -->
      {% if section.settings.show_placeholder %}
      <div class="affiliate-card placeholder" style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); border: 2px dashed #cbd5e1; display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 300px;">
        <div style="font-size: 48px; margin-bottom: 16px; opacity: 0.5;">‚ú®</div>
        <h3 style="margin: 0 0 8px 0; color: #64748b; text-align: center;">More Coming Soon</h3>
        <p style="margin: 0; color: #94a3b8; font-size: 14px; text-align: center;">Stay tuned for more amazing product recommendations!</p>
      </div>
      {% endif %}
      
    </div>
  </div>

  <style>
    /* Affiliate Card Hover Effects */
    #affiliate-{{ section.id }} .affiliate-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.15);
    }
    
    #affiliate-{{ section.id }} .affiliate-card:hover .image-overlay {
      opacity: 1;
    }
    
    #affiliate-{{ section.id }} .affiliate-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(255, 149, 0, 0.4);
    }
    
    #affiliate-{{ section.id }} .affiliate-button:hover .button-shine {
      left: 100%;
    }
    
    /* Mobile Responsive */
    @media (max-width: 768px) {
      #affiliate-{{ section.id }} .affiliate-grid {
        grid-template-columns: 1fr;
        gap: 16px;
      }
      
      #affiliate-{{ section.id }} .affiliate-header h2 {
        font-size: 28px;
      }
      
      #affiliate-{{ section.id }} .affiliate-card {
        padding: 20px;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Affiliate Showcase",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Recommended Finds"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section Subheading",
      "default": "Discover these amazing products we love"
    },
    {
      "type": "checkbox",
      "id": "show_placeholder",
      "label": "Show Placeholder Card",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Affiliate Showcase"
    }
  ]
}
{% endschema %}
