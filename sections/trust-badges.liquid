<!-- Trust Badges Section -->
<div class="trust-badges-section" id="trust-badges-{{ section.id }}">
  <div class="container">
    {% if section.settings.show_title %}
      <h2 class="trust-badges-title">{{ section.settings.title | default: "Shop with Confidence" }}</h2>
    {% endif %}
    
    <div class="trust-badges-grid">
      <!-- Security Badge -->
      {% if section.settings.show_security %}
        <div class="trust-badge security-badge">
          <div class="badge-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M12 22C12 22 20 18 20 12V5L12 2L4 5V12C4 18 12 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="badge-content">
            <h3>Secure Checkout</h3>
            <p>SSL encrypted & secure payments</p>
          </div>
        </div>
      {% endif %}

      <!-- Money Back Guarantee -->
      {% if section.settings.show_guarantee %}
        <div class="trust-badge guarantee-badge">
          <div class="badge-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="badge-content">
            <h3>{{ section.settings.guarantee_days | default: 30 }}-Day Returns</h3>
            <p>Money back guarantee</p>
          </div>
        </div>
      {% endif %}

      <!-- Free Shipping -->
      {% if section.settings.show_shipping %}
        <div class="trust-badge shipping-badge">
          <div class="badge-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <rect x="1" y="3" width="15" height="13" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
              <path d="M16 8H20L23 11V16H16V8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="5.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
              <circle cx="18.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="badge-content">
            <h3>Free Shipping</h3>
            <p>On orders over ${{ section.settings.free_shipping_threshold | default: 50 }}</p>
          </div>
        </div>
      {% endif %}

      <!-- Customer Support -->
      {% if section.settings.show_support %}
        <div class="trust-badge support-badge">
          <div class="badge-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M21 15C21 15.5304 20.7893 16.0391 20.4142 16.4142C20.0391 16.7893 19.5304 17 19 17H7L3 21V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M8 9H16M8 13H12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="badge-content">
            <h3>24/7 Support</h3>
            <p>Expert customer service</p>
          </div>
        </div>
      {% endif %}

      <!-- Quality Guarantee -->
      {% if section.settings.show_quality %}
        <div class="trust-badge quality-badge">
          <div class="badge-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="badge-content">
            <h3>Premium Quality</h3>
            <p>Carefully curated products</p>
          </div>
        </div>
      {% endif %}

      <!-- Fast Delivery -->
      {% if section.settings.show_delivery %}
        <div class="trust-badge delivery-badge">
          <div class="badge-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="badge-content">
            <h3>Fast Delivery</h3>
            <p>{{ section.settings.delivery_time | default: "2-5 business days" }}</p>
          </div>
        </div>
      {% endif %}
    </div>

    <!-- Payment Methods -->
    {% if section.settings.show_payment_methods %}
