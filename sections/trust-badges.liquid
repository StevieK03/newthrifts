                <text x="20" y="15" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="6" font-weight="bold">PayPal</text>
              </svg>
            </div>
          {% endif %}
          
          {% if section.settings.accept_apple_pay %}
            <div class="payment-icon apple-pay">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none">
                <rect width="40" height="24" rx="4" fill="#000"/>
                <text x="20" y="15" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="5" font-weight="bold">Apple Pay</text>
              </svg>
            </div>
          {% endif %}
          
          {% if section.settings.accept_google_pay %}
