              <svg width="40" height="24" viewBox="0 0 40 24" fill="none">
                <rect width="40" height="24" rx="4" fill="#4285F4"/>
                <text x="20" y="15" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="5" font-weight="bold">Google Pay</text>
              </svg>
            </div>
          {% endif %}
          
          {% if section.settings.accept_shop_pay %}
            <div class="payment-icon shop-pay">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none">
                <rect width="40" height="24" rx="4" fill="#5A31F4"/>
                <text x="20" y="15" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="5" font-weight="bold">Shop Pay</text>
