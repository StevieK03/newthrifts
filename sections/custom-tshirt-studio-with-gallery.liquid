        align-items: center;
        justify-content: center;
        transform-origin: center center;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: grab;
    }

    .cts-mockup-canvas-{{ section.id }}.zoomed {
        cursor: move;
    }

    .cts-mockup-canvas-{{ section.id }}:active {
        cursor: grabbing;
    }

