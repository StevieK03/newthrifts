{% comment %}
  Contact page template
{% endcomment %}

<div class="contact-page-wrapper" style="min-height: 80vh; padding: 40px 20px; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);">
  <div class="contact-page-container" style="max-width: 800px; margin: 0 auto;">
    
    <!-- Page Header -->
    <div class="contact-header" style="text-align: center; margin-bottom: 50px;">
      <h1 style="font-family: 'Bebas Neue', sans-serif; font-size: 48px; color: #0f172a; margin-bottom: 20px; letter-spacing: 2px;">
        Contact Us
      </h1>
      <p style="font-size: 18px; color: #64748b; max-width: 600px; margin: 0 auto; line-height: 1.6;">
        We'd love to hear from you! Send us a message and we'll respond as soon as possible.
      </p>
    </div>

    <!-- Contact Form Section -->
    <div class="contact-form-section" style="background: white; border-radius: 20px; padding: 40px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); border: 1px solid #e2e8f0;">
      
      <!-- Form Title -->
      <div class="form-header" style="text-align: center; margin-bottom: 30px;">
        <h2 style="font-family: 'Bebas Neue', sans-serif; font-size: 32px; color: #0f172a; margin-bottom: 10px;">
          Send Us a Message
        </h2>
        <p style="color: #64748b; font-size: 16px;">
          Fill out the form below and we'll get back to you within 24 hours.
        </p>
      </div>
      
      <!-- Form Status Messages -->
      {% if form.posted_successfully? %}
        <div class="success-message" style="margin-bottom: 25px; padding: 20px; border-radius: 12px; background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%); color: #065f46; border: 2px solid #10b981; text-align: center; font-weight: 600; box-shadow: 0 4px 15px rgba(16, 185, 129, 0.2); animation: slideInDown 0.5s ease-out;">
          <div style="display: flex; align-items: center; justify-content: center; gap: 12px; margin-bottom: 8px;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" style="color: #10b981;">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span style="font-size: 18px; font-weight: 700;">Message Sent Successfully!</span>
          </div>
          <p style="margin: 0; font-size: 16px; opacity: 0.9;">Thanks! We'll get back to you within 24 hours.</p>
        </div>
      {% elsif form.errors %}
        <div class="error-message" style="margin-bottom: 25px; padding: 20px; border-radius: 12px; background: linear-gradient(135deg, #fee2e2 0%, #fca5a5 100%); color: #991b1b; border: 2px solid #ef4444; text-align: center; font-weight: 600; box-shadow: 0 4px 15px rgba(239, 68, 68, 0.2); animation: slideInDown 0.5s ease-out;">
          <div style="display: flex; align-items: center; justify-content: center; gap: 12px; margin-bottom: 8px;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" style="color: #ef4444;">
              <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 19.5c-.77.833.192 2.5 1.732 2.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span style="font-size: 18px; font-weight: 700;">Please Fix the Following Issues:</span>
          </div>
          <div style="margin: 0; font-size: 16px; opacity: 0.9;">{{ form.errors | default_errors }}</div>
        </div>
      {% endif %}

      <!-- Dynamic Status Message Container -->
      <div id="dynamic-status-message" style="display: none; margin-bottom: 25px;"></div>

      <!-- Shopify Native Contact Form -->
      {% form 'contact', id: 'ContactForm', class: 'contact-form', style: 'display: flex; flex-direction: column; gap: 25px;' %}
        
        <!-- Name Field -->
        <div class="form-group">
          <label for="ContactForm-name" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Your Name *
          </label>
          <input 
            id="ContactForm-name" 
            type="text" 
            name="contact[name]" 
            required 
            style="width: 100%; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; transition: all 0.3s ease; background: #f8fafc;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            placeholder="Enter your full name"
          >
        </div>

        <!-- Email Field -->
        <div class="form-group">
          <label for="ContactForm-email" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Email Address *
          </label>
          <input 
            id="ContactForm-email" 
            type="email" 
            name="contact[email]" 
            required 
            style="width: 100%; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; transition: all 0.3s ease; background: #f8fafc;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            placeholder="your.email@example.com"
          >
        </div>

        <!-- Subject Field -->
        <div class="form-group">
          <label for="ContactForm-subject" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Subject
          </label>
          <input 
            id="ContactForm-subject" 
            type="text" 
            name="contact[subject]" 
            style="width: 100%; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; transition: all 0.3s ease; background: #f8fafc;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            placeholder="What's this about?"
          >
        </div>
        
        <!-- Message Field -->
        <div class="form-group">
          <label for="ContactForm-body" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Your Message *
          </label>
          <textarea 
            id="ContactForm-body" 
            name="contact[body]" 
            rows="8" 
            required 
            style="width: 100%; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; resize: vertical; background: #f8fafc; transition: all 0.3s ease; outline: none;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            placeholder="Tell us how we can help you..."
          ></textarea>
        </div>
        
        <!-- Submit Button -->
        <button 
          type="submit"
          style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); color: white; border: none; padding: 18px 32px; border-radius: 12px; font-size: 18px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; margin-top: 20px; box-shadow: 0 4px 15px rgba(15, 23, 42, 0.3);"
          onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 25px rgba(15, 23, 42, 0.4)'"
          onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(15, 23, 42, 0.3)'"
        >
          Send Message
        </button>
      {% endform %}
      
    </div>

    <!-- Contact Info Section -->
    <div class="contact-info" style="margin-top: 50px; text-align: center;">
      <h3 style="font-family: 'Bebas Neue', sans-serif; font-size: 28px; color: #0f172a; margin-bottom: 20px;">
        Other Ways to Reach Us
      </h3>
      <div style="display: flex; justify-content: center; gap: 40px; flex-wrap: wrap;">
        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); min-width: 200px;">
          <h4 style="color: #374151; margin-bottom: 10px; font-size: 18px;">üìß Email</h4>
          <p style="color: #64748b; font-size: 16px;">shopping@newthrifts.com</p>
        </div>
        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); min-width: 200px;">
          <h4 style="color: #374151; margin-bottom: 10px; font-size: 18px;">‚è∞ Response Time</h4>
          <p style="color: #64748b; font-size: 16px;">Within 24 hours</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Success/Error Message Animations */
  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  /* Success message hover effect */
  .success-message:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3) !important;
    transition: all 0.3s ease;
  }

  /* Error message hover effect */
  .error-message:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(239, 68, 68, 0.3) !important;
    transition: all 0.3s ease;
  }

  /* Dark mode styling for form fields */
  [data-theme="dark"] #ContactForm-name,
  [data-theme="dark"] #ContactForm-email,
  [data-theme="dark"] #ContactForm-subject,
  [data-theme="dark"] #ContactForm-body {
    background: #1e293b !important;
    border-color: #334155 !important;
    color: #f1f5f9 !important;
  }

  [data-theme="dark"] #ContactForm-name:focus,
  [data-theme="dark"] #ContactForm-email:focus,
  [data-theme="dark"] #ContactForm-subject:focus,
  [data-theme="dark"] #ContactForm-body:focus {
    background: #0f172a !important;
    border-color: #3b82f6 !important;
    color: #f1f5f9 !important;
  }

  [data-theme="dark"] #ContactForm-name::placeholder,
  [data-theme="dark"] #ContactForm-email::placeholder,
  [data-theme="dark"] #ContactForm-subject::placeholder,
  [data-theme="dark"] #ContactForm-body::placeholder {
    color: #64748b !important;
  }

  /* Dark mode styling for success/error messages */
  [data-theme="dark"] .success-message {
    background: linear-gradient(135deg, #064e3b 0%, #065f46 100%) !important;
    border-color: #10b981 !important;
    color: #d1fae5 !important;
  }

  [data-theme="dark"] .error-message {
    background: linear-gradient(135deg, #7f1d1d 0%, #991b1b 100%) !important;
    border-color: #ef4444 !important;
    color: #fecaca !important;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .contact-page-wrapper {
      padding: 20px 15px !important;
    }
    
    .contact-form-section {
      padding: 25px !important;
      border-radius: 15px !important;
    }
    
    .contact-header h1 {
      font-size: 36px !important;
    }
    
    .contact-info > div {
      flex-direction: column !important;
      gap: 20px !important;
    }

    .success-message,
    .error-message {
      padding: 16px !important;
      margin-bottom: 20px !important;
    }

    .success-message div,
    .error-message div {
      flex-direction: column !important;
      gap: 8px !important;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('ContactForm');
  const statusContainer = document.getElementById('dynamic-status-message');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      // Show loading state immediately
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Sending...';
      submitBtn.disabled = true;
      submitBtn.style.opacity = '0.7';
      
      // Show success message after a short delay
      // This will show regardless of Shopify's response
      setTimeout(function() {
        showSuccessMessage();
        
        // Reset button state
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
        submitBtn.style.opacity = '1';
        
        // Reset form
        form.reset();
      }, 1500);
      
      // Let the form submit normally to Shopify
      // Don't prevent default - let Shopify handle the actual submission
    });
  }
  
  function showSuccessMessage() {
    const successHTML = `
      <div class="success-message" style="padding: 20px; border-radius: 12px; background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%); color: #065f46; border: 2px solid #10b981; text-align: center; font-weight: 600; box-shadow: 0 4px 15px rgba(16, 185, 129, 0.2); animation: slideInDown 0.5s ease-out; position: relative;">
        <button onclick="this.parentElement.parentElement.style.display='none'" style="position: absolute; top: 10px; right: 10px; background: none; border: none; color: #065f46; font-size: 20px; cursor: pointer; opacity: 0.7; transition: opacity 0.2s;" onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0.7'">√ó</button>
        <div style="display: flex; align-items: center; justify-content: center; gap: 12px; margin-bottom: 8px;">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" style="color: #10b981;">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span style="font-size: 18px; font-weight: 700;">Message Sent Successfully!</span>
        </div>
        <p style="margin: 0; font-size: 16px; opacity: 0.9;">Thanks! We'll get back to you within 24 hours.</p>
      </div>
    `;
    
    statusContainer.innerHTML = successHTML;
    statusContainer.style.display = 'block';
    
    // Scroll to the message
    statusContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
    
    // Hide message after 15 seconds
    setTimeout(function() {
      statusContainer.style.display = 'none';
    }, 15000);
  }
});
</script>
