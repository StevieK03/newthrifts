{% comment %}
  Contact page template
{% endcomment %}

<div class="contact-page-wrapper" style="min-height: 80vh; padding: 40px 20px; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);">
  <div class="contact-page-container" style="max-width: 800px; margin: 0 auto;">
    
    <!-- Page Header -->
    <div class="contact-header" style="text-align: center; margin-bottom: 50px;">
      <h1 style="font-family: 'Bebas Neue', sans-serif; font-size: 48px; color: #0f172a; margin-bottom: 20px; letter-spacing: 2px;">
        Contact Us
      </h1>
      <p style="font-size: 18px; color: #64748b; max-width: 600px; margin: 0 auto; line-height: 1.6;">
        We'd love to hear from you! Send us a message and we'll respond as soon as possible.
      </p>
    </div>

    <!-- Contact Form Section -->
    <div class="contact-form-section" style="background: white; border-radius: 20px; padding: 40px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); border: 1px solid #e2e8f0;">
      
      <!-- Form Title -->
      <div class="form-header" style="text-align: center; margin-bottom: 30px;">
        <h2 style="font-family: 'Bebas Neue', sans-serif; font-size: 32px; color: #0f172a; margin-bottom: 10px;">
          Send Us a Message
        </h2>
        <p style="color: #64748b; font-size: 16px;">
          Fill out the form below and we'll get back to you within 24 hours.
        </p>
      </div>
      
      <!-- Rich Text Editor Form -->
      <form id="contact-form" style="display: flex; flex-direction: column; gap: 25px;">
        
        <!-- Name Field -->
        <div class="form-group">
          <label for="contact-name" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Your Name *
          </label>
          <input 
            type="text" 
            id="contact-name" 
            name="name" 
            required 
            style="width: 100%; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; transition: all 0.3s ease; background: #f8fafc;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            placeholder="Enter your full name"
          >
        </div>

        <!-- Email Field -->
        <div class="form-group">
          <label for="contact-email" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Email Address *
          </label>
          <input 
            type="email" 
            id="contact-email" 
            name="email" 
            required 
            style="width: 100%; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; transition: all 0.3s ease; background: #f8fafc;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            placeholder="your.email@example.com"
          >
        </div>

        <!-- Subject Field -->
        <div class="form-group">
          <label for="contact-subject" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Subject *
          </label>
          <input 
            type="text" 
            id="contact-subject" 
            name="subject" 
            required 
            style="width: 100%; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; transition: all 0.3s ease; background: #f8fafc;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            placeholder="What's this about?"
          >
        </div>
        
        <!-- Rich Text Message Field -->
        <div class="form-group">
          <label for="contact-message" style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 16px;">
            Your Message *
          </label>
          
          <!-- Rich Text Toolbar -->
          <div class="rich-text-toolbar" style="display: flex; gap: 8px; margin-bottom: 10px; padding: 8px; background: #f8fafc; border-radius: 8px; border: 1px solid #e2e8f0;">
            <button type="button" class="format-btn" data-command="bold" style="padding: 8px 12px; border: 1px solid #d1d5db; background: white; border-radius: 6px; cursor: pointer; font-weight: bold; transition: all 0.2s ease; min-width: 40px; color: #374151;">
              <strong>B</strong>
            </button>
            <button type="button" class="format-btn" data-command="italic" style="padding: 8px 12px; border: 1px solid #d1d5db; background: white; border-radius: 6px; cursor: pointer; font-style: italic; transition: all 0.2s ease; min-width: 40px; color: #374151;">
              <em>I</em>
            </button>
            <button type="button" class="format-btn" data-command="insertUnorderedList" style="padding: 8px 12px; border: 1px solid #d1d5db; background: white; border-radius: 6px; cursor: pointer; transition: all 0.2s ease; min-width: 60px; color: #374151;">
              ‚Ä¢ List
            </button>
            <button type="button" class="format-btn" data-command="insertOrderedList" style="padding: 8px 12px; border: 1px solid #d1d5db; background: white; border-radius: 6px; cursor: pointer; transition: all 0.2s ease; min-width: 60px; color: #374151;">
              1. List
            </button>
          </div>
          
          <!-- Rich Text Editor -->
          <div 
            id="contact-message" 
            name="message" 
            contenteditable="true"
            style="width: 100%; min-height: 200px; padding: 16px 20px; border: 2px solid #d1d5db; border-radius: 12px; font-size: 16px; line-height: 1.6; background: #f8fafc; transition: all 0.3s ease; outline: none;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.backgroundColor='white'; this.style.boxShadow='0 0 0 3px rgba(59, 130, 246, 0.1)'"
            onblur="this.style.borderColor='#d1d5db'; this.style.backgroundColor='#f8fafc'; this.style.boxShadow='none'"
            data-placeholder="Tell us how we can help you... (You can format your text using the toolbar above)"
          ></div>
          
          <!-- Hidden textarea for form submission -->
          <textarea name="message" id="message-hidden" style="display: none;"></textarea>
        </div>
        
        <!-- Submit Button -->
        <button 
          type="submit" 
          id="submit-btn"
          style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); color: white; border: none; padding: 18px 32px; border-radius: 12px; font-size: 18px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; margin-top: 20px; box-shadow: 0 4px 15px rgba(15, 23, 42, 0.3);"
          onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 25px rgba(15, 23, 42, 0.4)'"
          onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(15, 23, 42, 0.3)'"
        >
          Send Message
        </button>
      </form>
      
      <!-- Form Status -->
      <div id="form-status" style="margin-top: 25px; padding: 16px; border-radius: 12px; display: none; font-weight: 500;"></div>
    </div>

    <!-- Contact Info Section -->
    <div class="contact-info" style="margin-top: 50px; text-align: center;">
      <h3 style="font-family: 'Bebas Neue', sans-serif; font-size: 28px; color: #0f172a; margin-bottom: 20px;">
        Other Ways to Reach Us
      </h3>
      <div style="display: flex; justify-content: center; gap: 40px; flex-wrap: wrap;">
        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); min-width: 200px;">
          <h4 style="color: #374151; margin-bottom: 10px; font-size: 18px;">üìß Email</h4>
          <p style="color: #64748b; font-size: 16px;">shopping@newthrifts.com</p>
        </div>
        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); min-width: 200px;">
          <h4 style="color: #374151; margin-bottom: 10px; font-size: 18px;">‚è∞ Response Time</h4>
          <p style="color: #64748b; font-size: 16px;">Within 24 hours</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Rich Text Editor Styling */
  #contact-message:empty:before {
    content: attr(data-placeholder);
    color: #9ca3af;
    font-style: italic;
  }

  #contact-message:focus:before {
    content: none;
  }

  /* Format button active states */
  .format-btn.active {
    background: #3b82f6 !important;
    color: white !important;
    border-color: #3b82f6 !important;
    transform: scale(1.05);
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
  }
  
  /* Format button click animation */
  .format-btn:active {
    transform: scale(0.95);
  }

  /* Dark mode styling for formatting toolbar */
  [data-theme="dark"] .rich-text-toolbar {
    background: #1e293b !important;
    border-color: #334155 !important;
  }

  [data-theme="dark"] .format-btn {
    background: #334155 !important;
    border-color: #475569 !important;
    color: #f1f5f9 !important;
  }

  [data-theme="dark"] .format-btn:hover {
    background: #475569 !important;
    border-color: #64748b !important;
    color: #ffffff !important;
  }

  [data-theme="dark"] .format-btn.active {
    background: #3b82f6 !important;
    color: white !important;
    border-color: #3b82f6 !important;
  }

  [data-theme="dark"] #contact-message {
    background: #1e293b !important;
    border-color: #334155 !important;
    color: #f1f5f9 !important;
  }

  [data-theme="dark"] #contact-message:focus {
    background: #0f172a !important;
    border-color: #3b82f6 !important;
  }

  [data-theme="dark"] #contact-message:empty:before {
    color: #64748b !important;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .contact-page-wrapper {
      padding: 20px 15px !important;
    }
    
    .contact-form-section {
      padding: 25px !important;
      border-radius: 15px !important;
    }
    
    .contact-header h1 {
      font-size: 36px !important;
    }
    
    .rich-text-toolbar {
      flex-wrap: wrap !important;
      gap: 6px !important;
    }
    
    .format-btn {
      font-size: 14px !important;
      padding: 6px 10px !important;
    }
    
    .contact-info > div {
      flex-direction: column !important;
      gap: 20px !important;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('contact-form');
  const submitBtn = document.getElementById('submit-btn');
  const statusDiv = document.getElementById('form-status');
  const messageDiv = document.getElementById('contact-message');
  const hiddenTextarea = document.getElementById('message-hidden');
  const formatButtons = document.querySelectorAll('.format-btn');
  
  // Rich text editor functionality
  formatButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      const command = this.getAttribute('data-command');
      
      // Remove active class from all buttons
      formatButtons.forEach(btn => btn.classList.remove('active'));
      
      // Add active class to clicked button
      this.classList.add('active');
      
      // Execute formatting command using modern approach
      if (command === 'bold') {
        document.execCommand('bold', false, null);
      } else if (command === 'italic') {
        document.execCommand('italic', false, null);
      } else if (command === 'insertUnorderedList') {
        document.execCommand('insertUnorderedList', false, null);
      } else if (command === 'insertOrderedList') {
        document.execCommand('insertOrderedList', false, null);
      }
      
      // Remove active class after command execution
      setTimeout(() => {
        this.classList.remove('active');
      }, 200);
      
      // Focus back to editor
      messageDiv.focus();
      
      // Update hidden textarea
      hiddenTextarea.value = messageDiv.innerHTML;
    });
  });
  
  // Update hidden textarea when rich text editor changes
  messageDiv.addEventListener('input', function() {
    hiddenTextarea.value = this.innerHTML;
  });
  
  // Form submission
  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form);
    const name = formData.get('name');
    const email = formData.get('email');
    const subject = formData.get('subject');
    const message = hiddenTextarea.value || messageDiv.innerHTML;
    
    // Validate form
    if (!name.trim() || !email.trim() || !subject.trim() || !message.trim()) {
      showStatus('Please fill in all required fields.', 'error');
      return;
    }
    
    // Validate email
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
      showStatus('Please enter a valid email address.', 'error');
      return;
    }
    
    // Show loading state
    submitBtn.textContent = 'Sending...';
    submitBtn.disabled = true;
    submitBtn.style.opacity = '0.7';
    
    try {
      // Send email using Formspree with the specified email
      const response = await fetch('https://formspree.io/f/xpzqkqyz', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          name: name,
          email: email,
          subject: subject,
          message: message,
          _subject: 'New Contact Form Message: ' + subject,
          _replyto: email,
          _next: window.location.href + '?sent=true'
        })
      });
      
      if (response.ok) {
        showStatus('Thank you! Your message has been sent successfully to shopping@newthrifts.com. We\'ll get back to you within 24 hours!', 'success');
        form.reset();
        messageDiv.innerHTML = '';
        hiddenTextarea.value = '';
      } else {
        throw new Error('Failed to send message');
      }
    } catch (error) {
      console.error('Error sending message:', error);
      showStatus('Sorry, there was an error sending your message. Please try again or email us directly at shopping@newthrifts.com', 'error');
    } finally {
      // Reset button
      submitBtn.textContent = 'Send Message';
      submitBtn.disabled = false;
      submitBtn.style.opacity = '1';
    }
  });
  
  function showStatus(message, type) {
    statusDiv.innerHTML = message;
    statusDiv.style.display = 'block';
    
    if (type === 'success') {
      statusDiv.style.backgroundColor = '#d1fae5';
      statusDiv.style.color = '#065f46';
      statusDiv.style.border = '1px solid #a7f3d0';
    } else {
      statusDiv.style.backgroundColor = '#fee2e2';
      statusDiv.style.color = '#991b1b';
      statusDiv.style.border = '1px solid #fca5a5';
    }
    
    // Hide status after 8 seconds
    setTimeout(() => {
      statusDiv.style.display = 'none';
    }, 8000);
  }
  
  // Check for success parameter in URL
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('sent') === 'true') {
    showStatus('Thank you! Your message has been sent successfully to shopping@newthrifts.com. We\'ll get back to you within 24 hours!', 'success');
    // Clean up URL
    window.history.replaceState({}, document.title, window.location.pathname);
  }
});
</script>


