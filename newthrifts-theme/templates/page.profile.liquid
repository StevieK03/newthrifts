{%- comment -%}
User Profile Page Template
Displays user profile signup and dashboard
{%- endcomment -%}

{% assign page_title = 'User Profile' %}

<div class="page-width">
  <div class="profile-page-container">
    {% comment %} Show signup form if user is not authenticated {% endcomment %}
    <div id="profile-signup-section">
      {% section 'user-profile-signup' %}
    </div>
    
    {% comment %} Show dashboard if user is authenticated {% endcomment %}
    <div id="profile-dashboard-section" style="display: none;">
      {% section 'user-profile-dashboard' %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  checkAuthStatus();
});

async function checkAuthStatus() {
  try {
    if (window.supabaseClient) {
      const user = await window.supabaseClient.getCurrentUser();
      if (user.user) {
        // User is authenticated, show dashboard
        document.getElementById('profile-signup-section').style.display = 'none';
        document.getElementById('profile-dashboard-section').style.display = 'block';
      } else {
        // User is not authenticated, show signup form
        document.getElementById('profile-signup-section').style.display = 'block';
        document.getElementById('profile-dashboard-section').style.display = 'none';
      }
    } else {
      // Supabase not available, show signup form
      document.getElementById('profile-signup-section').style.display = 'block';
      document.getElementById('profile-dashboard-section').style.display = 'none';
    }
  } catch (error) {
    console.error('Auth check error:', error);
    // On error, show signup form
    document.getElementById('profile-signup-section').style.display = 'block';
    document.getElementById('profile-dashboard-section').style.display = 'none';
  }
}
</script>
