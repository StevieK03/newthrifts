
<section class="container card" style="margin: 28px auto;">
  <h1 style="margin-top:0; font-family:'Bebas Neue', sans-serif; font-size:42px;">{{ page.title }}</h1>
  <div>{{ page.content }}</div>
</section>

<style>
/* Dark mode styling for main page content */
[data-theme="dark"] .container.card {
  background: #1e293b !important;
  border: 1px solid #334155 !important;
  color: #f1f5f9 !important;
}

[data-theme="dark"] .container.card h1 {
  color: #f1f5f9 !important;
}

[data-theme="dark"] .container.card p {
  color: #f1f5f9 !important;
}

[data-theme="dark"] .container.card strong {
  color: #f1f5f9 !important;
}
</style>

{% schema %}
{
  "name": "Main page",
  "settings": [],
  "presets": [{ "name": "Main page" }]
}
{% endschema %}
